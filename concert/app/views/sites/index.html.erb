<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>District</th>
    <th>Map</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
    


<% @sites.each do |site| %>
  <tr>
    <td><%= site.site_id %></td>
    <td><%= site.name %></td>
    <td><%= site.address %></td>
    <td><%= site.district %></td>
    <td><%= site.map %></td>
    <td><%= site.phone %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

